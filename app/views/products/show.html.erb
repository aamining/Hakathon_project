<p id="notice"><%= notice %></p>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <td><%= image_tag(@product.image_url) %></td>
          <p>
            <strong>Description:</strong>
            <%= @product.description %>
          </p>
          <p>
            <strong>Price ($):</strong>
            <%= @product.price %>
          </p>
          <li><%= link_to 'Payment', new_charge_path %></li>
          <li><%= link_to 'Back', products_path %></li>
          <li><%= link_to 'DELETE', products_path %></li>

        </div>
      </div>
    </div>
  </div>
</div>
